                        <Insets/>
                    </opaqueInsets>
                    <GridPane.margin>
                        <Insets top="2.0"/>
                    </GridPane.margin>
                </PasswordField>

                <Button fx:id="bLogIn" mnemonicParsing="false" onAction="#logIn" text="Logga in" GridPane.columnIndex="1"

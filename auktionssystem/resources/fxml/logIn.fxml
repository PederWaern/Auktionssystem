                    </GridPane.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </opaqueInsets>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </padding>
        </GridPane>
        <Text fx:id="tInfo" strokeType="OUTSIDE" strokeWidth="0.0">
            <VBox.margin>
                <Insets bottom="10.0" left="100.0"/>
            </VBox.margin>
        </Text>
    </children>
</fx:root>

<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml">
    <children>
        <GridPane fx:id="root" prefHeight="200.0" prefWidth="400.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Inloggning">
                    <padding>
                        <Insets bottom="20.0" right="50.0"/>
                    </padding>
                </Label>


                <Label prefHeight="17.0" prefWidth="137.0" text="AnstÃ¤llningsnummer:" GridPane.columnIndex="0"
                       GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                    <padding>
                        <Insets right="5.0"/>
                    </padding>
                </Label>

                <TextField fx:id="txfAnstallninsnummer" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets top="2.0"/>
                    </GridPane.margin>
                </Label>

                <PasswordField fx:id="txfPassword" onAction="#onEnter" GridPane.columnIndex="1" GridPane.rowIndex="2">

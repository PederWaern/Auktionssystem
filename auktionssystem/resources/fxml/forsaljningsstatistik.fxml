<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.ToggleGroup?>
<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112-ea"
            fx:controller="com.surperfluousfew.auktionsystem.controllers.ForsaljningsstatistikController">

    <children>

    </children>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <fx:define>
                    <ToggleGroup fx:id="group"/>
                </fx:define>
                <RadioButton fx:id="rbKunder" toggleGroup="$group" mnemonicParsing="false" text="Kunder" onAction="#showKunder"/>
                <RadioButton fx:id="rbAuktioner" toggleGroup="$group" mnemonicParsing="false" text="Auktioner" onAction="#showAuktioner"/>
                <RadioButton fx:id="rbProvision" toggleGroup="$group" mnemonicParsing="false" text="Provision" onAction="#showProvision"/>
            </children>
        </HBox>
    </top>
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </center>
</BorderPane>

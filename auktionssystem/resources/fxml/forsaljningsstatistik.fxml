<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112-ea" fx:controller="com.surperfluousfew.auktionsystem.controllers.ForsaljningsstatistikController">
    <children>

    </children>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <RadioButton fx:id="rbKunder" mnemonicParsing="false" text="Kunder" onAction="#showKunder"/>
            <RadioButton fx:id="rbAuktioner" mnemonicParsing="false" text="Auktioner" onAction="#showAuktioner" />
            <RadioButton fx:id="rbProvision" mnemonicParsing="false" text="Provision" onAction="#showProvision"/>
         </children>
      </HBox>
   </top>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </center>

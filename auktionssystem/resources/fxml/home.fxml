<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="600.0" prefWidth="800.0" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
              <MenuBar minHeight="40.0" prefWidth="800.0">
                  <menus>
                      <Menu mnemonicParsing="false" text="Lägg till">
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#setSceneAddAuktion" text="Auktion" />
                              <MenuItem mnemonicParsing="false" onAction="#setSceneAddKund" text="Kund" />
                              <MenuItem mnemonicParsing="false" onAction="#setSceneAddLeverantor" text="Leverantör" />
                          </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Vyer">
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#setScenePGA" text="Pågående auktioner" />
                          </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Försäljningsstatistik">
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#setSceneKundLista" text="Kunder" />
                              <MenuItem mnemonicParsing="false" onAction="#setSceneAuktioner" text="Auktioner" />
                              <MenuItem mnemonicParsing="false" onAction="#setSceneProvision" text="Provision" />
                          </items>
                      </Menu>
                  </menus>
              </MenuBar>
              
              <AnchorPane fx:id="root">
                  <opaqueInsets>
                      <Insets />
                  </opaqueInsets>
              </AnchorPane>
             <ImageView fx:id="imageView" fitHeight="560.0" fitWidth="800.0">
               <image>
                  <Image url="@../images/home.jpg" />
               </image>
             </ImageView>
         </children>
      </VBox>
   </children>
</fx:root>

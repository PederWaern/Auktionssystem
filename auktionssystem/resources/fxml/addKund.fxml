<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<fx:root type="javafx.scene.layout.GridPane" alignment="center" hgap="10" prefHeight="550" prefWidth="800" vgap="10" xmlns:fx="http://javafx.com/fxml/">
    <children>
        <Label text="Fyll i alla fält och tryck på &quot;Lägg till&quot; för att lägga till en ny kund" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <GridPane hgap="10.0" vgap="10.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <children>
                <Label text="Förnamn:">
                    <tooltip>
                        <Tooltip text="Max 50 characters" />
                    </tooltip>
                </Label>
                <TextField fx:id="txfFirstName" GridPane.columnIndex="2" />
                <Label text="Efternamn:" GridPane.columnIndex="3" />
                <TextField fx:id="txfLastName" GridPane.columnIndex="4" />
                <Label text="Personnummer:" GridPane.rowIndex="1" />
                <TextField fx:id="txfPnummer" promptText="YYMMDDXXXX" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Label text="Telefonnummer" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                <TextField fx:id="txfTelnummer" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                <Label text="Epost:" GridPane.rowIndex="2" />
                <TextField fx:id="txfEpost" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <Label text="Gata:" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                <TextField fx:id="txfGata" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                <Label text="Postnummer:" GridPane.rowIndex="3" />
                <TextField fx:id="txfPostnummer" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <Label text="Ort:" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                <TextField fx:id="txfOrt" GridPane.columnIndex="4" GridPane.rowIndex="3" />
                <Button fx:id="bAddKund" onAction="#addKund" text="Lägg till" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />

            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <Label fx:id="labelNyKundStatus" text="" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</fx:root>
